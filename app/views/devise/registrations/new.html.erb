<div class="min-h-screen bg-gray-100 py-6 flex flex-col justify-center sm:py-12">
  <div class="relative py-3 sm:max-w-xl sm:mx-auto">
    <div class="relative px-4 py-10 bg-white shadow-lg sm:rounded-3xl sm:p-20">
      <div class="max-w-md mx-auto">
        <div>
          <h1 class="text-2xl font-bold text-center text-indigo-700">Sign Up</h1>
        </div>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: {turbo: false}) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

           <div class="flex mb-4 flex-col">
            <%= f.label :username, class: 'pl-2 outline-none border-none font-mono text-gray-700' %>
            <%= f.text_field :username, placeholder: 'username', required: true, class: 'border-2 py-2 px-3 rounded-md' %>
          </div>

          <div class="flex mb-4 flex-col">
            <%= f.label :email, class: 'pl-2 outline-none border-none font-mono text-gray-700' %>
            <%= f.email_field :email, placeholder: 'Email', class: 'border-2 py-2 px-3 rounded-md' %>
          </div>

          <div class="flex mb-4 flex-col">
            <%= f.label :password, class: 'pl-2 outline-none border-none font-mono text-gray-700' %>
            <%= f.password_field :password,placeholder: 'Password', autocomplete: "new-password", class: 'border-2 py-2 px-3 rounded-md' %>
          </div>

          <div class="flex mb-4 flex-col">
            <%= f.label :password_confirmation, class: 'pl-2 outline-none border-none font-mono text-gray-700' %>
            <%= f.password_field :password_confirmation,placeholder: 'Confirm Password', autocomplete: "new-password", class: 'border-2 py-2 px-3 rounded-md' %>
          </div>
          <div class="mb-4">
              <%= f.check_box :private, class: 'w-4 h-4 text-teal-600 bg-gray-100 rounded border-gray-300 focus:ring-teal-500 dark:focus:ring-teal-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600' %>
              <%= f.label :private, class: 'ml-2 text-sm font-medium text-gray-900 dark:text-gray-300' %>
            </div>

          <div class="actions">
            <%= f.submit "Sign up", class: "bg-red-500 hover:bg-red-700 text-white py-2 px-4 rounded" %>
            <%= link_to "Sign in", new_session_path(resource_name), class: "bg-green-500 hover:bg-green-700 text-white py-2 px-4 rounded" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
